//q17 Write a program to find the roots of a quadratic equation and categorize them.
#include <stdio.h>
#include <math.h>
int main(){
    float a, b, c, discriminant, root1, root2, realpart, imagpart;
    printf("Please write integers only \n");
    printf("Enter the coefficient a :");
    scanf("%f", &a);
    printf("Enter the coefficient b :");
    scanf("%f", &b);
    printf("Enter the coefficient c :");
    scanf("%f", &c);
    discriminant = b*b - 4*a*c;
    if (discriminant > 0) {
        root1 = (-b + sqrt(discriminant))/(2*a);
        root2 = (-b + sqrt(discriminant))/(2*a);
        printf("this quadratic have two different roots \n");
        printf("root1 = %.2f and root2 = %.2f",root1, root2);
    }
    //if the discriminant is zero
    else if (discriminant == 0) {
        root1 = -b/(2*a);
        printf("both roots are equal \n");
        printf("root1 = root2 = %f",root1);
    }
    //if the discriminant is negative
    else {
        realpart = -b/(2*a);
        imagpart = sqrt(-discriminant)/(2*a);
        printf("both the roots are complex \n");
        printf("root1 = %f + %f \n", realpart, imagpart);
        printf("root2 = %f - %f", realpart, imagpart);
    }
    return 0;
}
